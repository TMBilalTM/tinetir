// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  username      String?   @unique
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  banner        String?   // Profil arkaplan resmi
  bio           String?
  location      String?
  website       String?
  verified      Boolean   @default(false)
  badges        String?   // JSON formatında rozetler ["verified", "premium", "business"]
  isAdmin       Boolean   @default(false) // Admin yetkisi
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts  Account[]
  sessions  Session[]
  tweets    Tweet[]
  likes     Like[]
  retweets  Retweet[]
  replies   Reply[]
  replyLikes ReplyLike[]
  following  Follow[] @relation("UserFollowing") // Bu kullanıcının takip ettikleri
  followers  Follow[] @relation("UserFollowers") // Bu kullanıcıyı takip edenler
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Tweet {
  id        String   @id @default(cuid())
  content   String
  images    String?  // JSON formatında resim URL'leri
  location  String?  // Konum bilgisi
  hashtags  String?  // JSON formatında hashtag'ler
  mentions  String?  // JSON formatında mention'lar
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  likes    Like[]
  retweets Retweet[]
  replies  Reply[]
}

model Like {
  id      String @id @default(cuid())
  userId  String
  tweetId String

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  tweet Tweet @relation(fields: [tweetId], references: [id], onDelete: Cascade)

  @@unique([userId, tweetId])
}

model Retweet {
  id        String   @id @default(cuid())
  userId    String
  tweetId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  tweet Tweet @relation(fields: [tweetId], references: [id], onDelete: Cascade)

  @@unique([userId, tweetId])
}

model Reply {
  id        String   @id @default(cuid())
  content   String
  userId    String
  tweetId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  tweet Tweet @relation(fields: [tweetId], references: [id], onDelete: Cascade)
  likes ReplyLike[]
}

model ReplyLike {
  id      String @id @default(cuid())
  userId  String
  replyId String

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  reply Reply @relation(fields: [replyId], references: [id], onDelete: Cascade)

  @@unique([userId, replyId])
}

model Follow {
  id          String @id @default(cuid())
  followerId  String // Takip eden kişinin ID'si
  followingId String // Takip edilen kişinin ID'si

  follower  User @relation("UserFollowing", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("UserFollowers", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
}
